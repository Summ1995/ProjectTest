<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Black16Font">
        <item name="android:textColor">@color/color96</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Black16Font2">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Gray14Font">
        <item name="android:textColor">@color/color96</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme15Font">
        <item name="android:textColor">@color/colorTheme</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme18Font">
        <item name="android:textColor">@color/colorTheme</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Gray15Font">
        <item name="android:textColor">@color/color96</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="WatchMore">
        <item name="android:textColor">@color/color96</item>
        <item name="android:background">@color/colorGrad</item>
    </style>
    
    <style name="Black20Font">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="White15Font">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Black14Font">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
