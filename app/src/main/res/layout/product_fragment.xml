<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/product_tab_menu"
        android:layout_width="match_parent"
        app:tabSelectedTextColor="@color/colorTheme"
        app:tabIndicatorHeight="0dp"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/body_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/product_tab_menu"
        android:name="com.example.tianjun.projecttest.Product.Product_Body_Fragment"/>
    <fragment
        android:id="@+id/type_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/product_tab_menu"
        android:name="com.example.tianjun.projecttest.Product.Product_TypeList_Fragment"/>

</RelativeLayout>