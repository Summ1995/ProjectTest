<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.design.widget.TabLayout
        android:id="@+id/info_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <fragment
            android:id="@+id/no_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.tianjun.projecttest.Product.Product_Info_yes_Summery"/>
        <fragment
            android:id="@+id/yes_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.tianjun.projecttest.Product.Product_Info_yes_Size"/>
    </RelativeLayout>
</LinearLayout>