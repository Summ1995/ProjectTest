<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="80dp"
        android:layout_height="match_parent">
        <RadioGroup
            android:id="@+id/choosetype_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="最IN"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/product_type_choose"/>
            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="美妆"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/product_type_choose"/>
            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="生活"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/product_type_choose"/>
            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="衣服"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/product_type_choose"/>
            <RadioButton
                android:id="@+id/rb5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="包包"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/product_type_choose"/>
            <RadioButton
                android:id="@+id/rb6"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="鞋子"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/product_type_choose"/>
            <RadioButton
                android:id="@+id/rb7"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="母婴"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/product_type_choose"/>
            <RadioButton
                android:id="@+id/rb8"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="配饰"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/product_type_choose"/>
        </RadioGroup>
    </ScrollView>
    <GridView
        android:id="@+id/type_gridview"
        android:numColumns="3"
        android:padding="10dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>