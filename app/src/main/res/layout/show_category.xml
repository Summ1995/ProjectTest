<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coloree">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTitleBK"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="5dp">
        <EditText
            android:id="@+id/detail_send_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/searchicon"
            android:background="@drawable/mm_edit_normal"
            android:hint="@string/search_info"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:drawablePadding="3dp"
            style="@style/Black14Font"/>
    </LinearLayout>
    <ListView
        android:id="@+id/show_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/coloree"/>

</LinearLayout>